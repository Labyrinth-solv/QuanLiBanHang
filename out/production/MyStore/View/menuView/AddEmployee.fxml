<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controller.menuController.AddEmployeeController"
            prefWidth="420" prefHeight="360"
            style="-fx-background-color:linear-gradient(to bottom right, #f8f9fa, #e9ecef);
                   -fx-padding:20; -fx-background-radius:12;">

    <!-- Header -->
    <top>
        <Label text="🧑‍💼 Thêm Nhân Viên Mới"
               BorderPane.alignment="CENTER"
               style="-fx-font-size:20; -fx-font-weight:bold; -fx-text-fill:#2b2b2b;
                      -fx-padding:10 0 20 0;"/>
    </top>

    <!-- Form -->
    <center>
        <GridPane hgap="15" vgap="12" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100"/>
                <ColumnConstraints halignment="LEFT" hgrow="ALWAYS"/>
            </columnConstraints>

            <Label text="Họ và tên:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="tfName" promptText="Nhập tên nhân viên"
                       GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-background-radius:6; -fx-border-radius:6;"/>

            <Label text="Ngày sinh:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpBirth"
                        GridPane.rowIndex="1" GridPane.columnIndex="1"
                        style="-fx-background-radius:6; -fx-border-radius:6;"/>

            <Label text="Giới tính:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbGender"
                      GridPane.rowIndex="2" GridPane.columnIndex="1"
                      promptText="Chọn giới tính"
                      style="-fx-background-radius:6; -fx-border-radius:6;"/>

            <Label text="Ca làm việc:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cbShift"
                      GridPane.rowIndex="3" GridPane.columnIndex="1"
                      promptText="Chọn ca làm"
                      style="-fx-background-radius:6; -fx-border-radius:6;"/>

            <Label text="Lương:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="tfSalary" promptText="Nhập lương"
                       GridPane.rowIndex="4" GridPane.columnIndex="1"
                       style="-fx-background-radius:6; -fx-border-radius:6;"/>
        </GridPane>
    </center>

    <!-- Buttons -->
    <bottom>
        <HBox spacing="12" alignment="CENTER_RIGHT"
              style="-fx-padding:20 0 0 0;">
            <Button text="💾 Lưu"
                    onAction="#onSave"
                    style="-fx-background-color:#4CAF50; -fx-text-fill:white;
                           -fx-font-weight:bold; -fx-background-radius:6;
                           -fx-padding:6 16;"/>
            <Button text="❌ Hủy"
                    onAction="#onCancel"
                    style="-fx-background-color:#e63946; -fx-text-fill:white;
                           -fx-font-weight:bold; -fx-background-radius:6;
                           -fx-padding:6 16;"/>
        </HBox>
    </bottom>
</BorderPane>

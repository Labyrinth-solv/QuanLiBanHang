<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:controller="Controller.MainController"
          xmlns="http://javafx.com/javafx/21"
          xmlns:fx="http://javafx.com/fxml/1"
          prefWidth="320" prefHeight="200"
          hgap="10" vgap="10"
          styleClass="login-pane">

    <padding>
        <Insets top="20" left="20" right="20" bottom="20"/>
    </padding>

    <columnConstraints>
        <ColumnConstraints prefWidth="120"/>
        <ColumnConstraints prefWidth="190"/>
    </columnConstraints>

    <!-- USERNAME -->
    <Label text="Tên đăng nhập:"
           GridPane.rowIndex="0"
           styleClass="login-label"/>

    <TextField fx:id="txtUserName"
               prefHeight="28"
               GridPane.rowIndex="0"
               GridPane.columnIndex="1"
               styleClass="input-field"/>

    <!-- PASSWORD -->
    <Label text="Mật khẩu:"
           GridPane.rowIndex="1"
           styleClass="login-label"/>

    <PasswordField fx:id="txtPassword"
                   prefHeight="28"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="1"
                   styleClass="input-field"/>

    <!-- LOGIN ERROR -->
    <Label fx:id="txtLoiDangNhap"
           textFill="#ee2222"
           GridPane.rowIndex="2"
           GridPane.columnIndex="0"
           GridPane.columnSpan="2"
           styleClass="error-label" />

    <!-- BUTTONS -->
    <HBox spacing="15"
          alignment="CENTER_RIGHT"
          GridPane.rowIndex="3"
          GridPane.columnIndex="1">

        <Button fx:id="btnDangNhap"
                text="Đăng nhập"
                onAction="#dangNhap"
                prefWidth="90"
                styleClass="btn-login"/>

        <Button fx:id="btnThoat"
                text="Thoát"
                onAction="#thoat"
                prefWidth="80"
                styleClass="btn-cancel"/>
    </HBox>
</GridPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="700.0" maxWidth="1350.0" prefHeight="700.0" prefWidth="1350.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.MainScreenController" styleClass="app-root">

    <!-- Thanh tiêu đề trên cùng -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10.0" styleClass="app-topbar">
            <padding>
                <Insets top="8.0" bottom="8.0" left="16.0" right="16.0"/>
            </padding>
            <Label text="QUẢN LÝ CỬA HÀNG" styleClass="topbar-title"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Label text="Xin chào:" styleClass="topbar-meta"/>
                <Label fx:id="txtTenNhanVien" text="admin" styleClass="topbar-meta-strong"/>
                <Label text="|" styleClass="topbar-meta"/>
                <Label text="Ngày:" styleClass="topbar-meta"/>
                <Label fx:id="txtNgay" text="01/01/2025" styleClass="topbar-meta-strong"/>
            </HBox>
        </HBox>
    </top>

    <!-- Trung tâm: Mở rộng tối đa để hiển thị nội dung -->
    <center>
        <TabPane fx:id="tab" prefHeight="680.0" prefWidth="1250.0"
                 tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER" styleClass="main-tabs">
            <BorderPane.margin>
                <Insets bottom="10.0" left="3.0" right="3.0" top="10.0" />
            </BorderPane.margin>
        </TabPane>
    </center>

    <!-- Cột bên trái -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="270.0" spacing="10.0"
              BorderPane.alignment="CENTER" styleClass="sidebar">
            <padding>
                <Insets top="15.0" right="10.0" bottom="15.0" left="10.0"/>
            </padding>

            <!-- Trang chủ -->
            <TitledPane collapsible="false" prefHeight="114.0" prefWidth="250.0" text="Trang chủ" styleClass="group">
                <VBox spacing="5.0">
                    <padding>
                        <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
                    </padding>
                    <Button fx:id="btnTrangChu" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Trang chủ"/>
                </VBox>
            </TitledPane>

            <!-- Dịch vụ -->
            <TitledPane collapsible="false" prefHeight="114.0" prefWidth="250.0" text="Dịch vụ" styleClass="group">
                <VBox spacing="5.0">
                    <padding>
                        <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
                    </padding>
                    <Button fx:id="btnDanhSachSanPham_DichVu" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Danh sách sản phẩm"/>
                    <Button fx:id="btnHoaDon_DichVu" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Thanh toán"/>
                </VBox>
            </TitledPane>

            <!-- Nhân viên -->
            <TitledPane collapsible="false" prefHeight="114.0" prefWidth="250.0" text="Con người" styleClass="group">
                <VBox spacing="5.0">
                    <padding>
                        <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
                    </padding>
                    <Button fx:id="btnDanhSach_NhanVien" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Danh sách nhân viên"/>
                    <Button fx:id="btnThemNhanVien" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Thêm nhân viên"/>
                    <!-- Nút mới: Danh sách khách hàng -->
                    <Button fx:id="btnDanhSachKhachHang" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Danh sách khách hàng"/>
                </VBox>
            </TitledPane>

            <!-- Báo cáo thu chi -->
            <TitledPane collapsible="false" prefHeight="114.0" prefWidth="250.0" text="Báo cáo thu chi" styleClass="group">
                <VBox spacing="5.0">
                    <padding>
                        <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
                    </padding>
                    <Button fx:id="btnBaoCaoDoanhThu" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Doanh thu"/>
                </VBox>
            </TitledPane>

            <!-- 🔹 Tìm kiếm (chuyển xuống góc dưới bên trái) -->
            <TitledPane collapsible="false" prefHeight="114.0" prefWidth="250.0" text="Tìm kiếm" styleClass="group">
                <VBox spacing="5.0">
                    <padding>
                        <Insets top="5.0" right="5.0" bottom="5.0" left="5.0"/>
                    </padding>
                    <Button fx:id="btnDanhSachHoaDon" prefHeight="35.0" prefWidth="170.0" styleClass="nav-btn" text="Danh sách hóa đơn"/>
                </VBox>
            </TitledPane>

        </VBox>
    </left>

    <!-- ĐÃ BỎ phần right để nhường chỗ cho trung tâm -->

    <!-- Thanh thông tin dưới cùng -->
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="1350.0" spacing="15.0" styleClass="app-statusbar">
            <padding>
                <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
            </padding>
            <Text text="Trạng thái: Sẵn sàng"/>
        </HBox>
    </bottom>

</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controller.menuController.EmployeeDetailController"
      spacing="12">

    <!-- Padding chuẩn -->
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Tiêu đề -->
    <Label text="Chi tiết nhân viên"
           style="-fx-font-size:20; -fx-font-weight:bold; -fx-text-fill:#2b2b2b;"/>

    <!-- Lưới hiển thị thông tin -->
    <GridPane hgap="15" vgap="10">
        <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lbId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Tên:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="lbName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Giới tính:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Label fx:id="lbGender" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Ngày sinh:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <Label fx:id="lbBirth" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Ca làm việc:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <Label fx:id="lbShift" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Lương:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <Label fx:id="lbSalary" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Nút đóng -->
    <Button text="Đóng"
            onAction="#onClose"
            style="-fx-background-color:#e74c3c; -fx-text-fill:white;
                   -fx-font-weight:bold; -fx-background-radius:6;
                   -fx-padding:6 16;"/>

</VBox>

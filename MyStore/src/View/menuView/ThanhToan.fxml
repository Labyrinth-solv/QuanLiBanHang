<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #f9f9f9;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="Controller.menuController.ThanhToanController">

    <!-- 🔹 PHẦN TRÊN: TÌM KIẾM NÂNG CAO -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #ffffff;                      -fx-padding: 8 15;                      -fx-border-color: #ddd;                      -fx-border-width: 0 0 1 0;">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="🔍 Tìm kiếm nâng cao:" />
            <Button onAction="#moTimKiemNangCao" style="-fx-background-color: #4CAF50;                            -fx-text-fill: white;                            -fx-font-weight: bold;                            -fx-background-radius: 6;" text="Mở cửa sổ tìm kiếm" />
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #333;" text="🛒 Giỏ hàng" />
        </HBox>
    </top>

    <!-- 🔹 GIỮA: CHIA 2 CỘT (SẢN PHẨM & GIỎ HÀNG) -->
    <center>
        <HBox spacing="15">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!--  DANH SÁCH SẢN PHẨM -->
            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="📦 DANH SÁCH SẢN PHẨM" />
                <TableView fx:id="tableSanPham" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="80" text="Mã SP" />
                        <TableColumn fx:id="colName" prefWidth="200" text="Tên sản phẩm" />
                        <TableColumn fx:id="colPrice" prefWidth="100" text="Đơn giá" />
                        <TableColumn fx:id="colStock" prefWidth="80" text="Tồn kho" />
                    </columns>
                </TableView>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="Số lượng:" />
                    <Spinner fx:id="spSoLuong" prefWidth="80" />
                    <Button onAction="#themVaoGio" style="-fx-background-color: #2196F3;                                    -fx-text-fill: white;                                    -fx-background-radius: 6;" text="Thêm vào giỏ" />
                </HBox>
            </VBox>

            <!--  GIỎ HÀNG -->
            <VBox prefWidth="350" spacing="10"
                  style="-fx-background-color: #ffffff;
             -fx-background-radius: 8;
             -fx-padding: 10;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10,0,0,0);">

                <Label text="GIỎ HÀNG"
                       style="-fx-font-size: 16px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #333;" />

                <TableView fx:id="tableGioHang" VBox.vgrow="ALWAYS"
                           prefHeight="426.0" prefWidth="342.0"
                           style="-fx-background-color: transparent;
                      -fx-border-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colGHName" text="Sản phẩm" prefWidth="120"/>
                        <TableColumn fx:id="colGHSoLuong" text="SL" prefWidth="40"/>
                        <TableColumn fx:id="colGHDGia" text="Giá" prefWidth="70"/>
                        <TableColumn fx:id="colGHThanhTien" text="Thành tiền" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

        </HBox>
    </center>



    <!-- 🔹 DƯỚI: KHÁCH HÀNG + GIẢM GIÁ + TỔNG TIỀN + NÚT THANH TOÁN -->
    <bottom>
        <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 10 15; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
            <!--  Thông tin khách hàng -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Label style="-fx-font-weight: bold;" text="Khách hàng:" />
                <TextField fx:id="txtKhachHang" editable="false" prefWidth="200" promptText="Chưa chọn khách hàng" />
                <Button onAction="#chonKhachHang" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-background-radius: 6;" text="Chọn / Thêm khách hàng" />
            </HBox>

            <!--  Giảm giá -->
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Giảm giá:" />
                <TextField fx:id="txtGiamGia" editable="false" prefWidth="160" style="-fx-font-weight: bold; -fx-text-fill: #ff5722;" promptText="0" />
            </HBox>

            <!--  Tổng tiền + thanh toán -->
            <HBox alignment="CENTER_RIGHT" spacing="15">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Tổng tiền:" />
                <TextField fx:id="txtTongTien" editable="false" prefWidth="160" style="-fx-font-weight: bold; -fx-text-fill: #e91e63;" />
                <Button onAction="#xoaGioHang" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 6;" text="🗑 Xóa giỏ" />
                <Button onAction="#thanhToan" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6;" text="💳 Thanh toán" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
